<Window x:Class="Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        mc:Ignorable="d"
        Title="Ma première fenêtre" Height="200" Width="300">
    <Grid Width="300" Height="200" RenderTransformOrigin="0,1" Background="#FF6565CF">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Label Content="Hello World!" HorizontalAlignment="Left" Margin="17,16,0,0" VerticalAlignment="Top" Width="82" Foreground="#FFE63D3D"/>
        <Button Content="Cliquez sur moi" HorizontalAlignment="Left" Margin="154,19,0,0" VerticalAlignment="Top" Width="112" Click="Button_Click" RenderTransformOrigin="0,1" Foreground="#FFB63333" Background="#FFBD7C7C"/>

    </Grid>
</Window>
